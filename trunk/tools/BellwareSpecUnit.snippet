  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>
        SpecUnit SetUp Method
      </Title>
      <Shortcut>ec</Shortcut>
    </Header>
    <Snippet>
      <Code Language="CSharp">
        <![CDATA[protected override void Context()
        {
          $end$
        }]]>
      </Code>
    </Snippet>
  </CodeSnippet>

