      <Shortcut>ca</Shortcut>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>concern</ID>
          <ToolTip>Concern</ToolTip>
          <Default>concern</Default>
        </Literal>
      </Declarations>
      <Code Language="CSharp">
        <![CDATA[[Concern(typeof($concern$))]]]>
      </Code>
    </Snippet>
  </CodeSnippet>

  <!--Specification Method-->
  <CodeSnippet Format="1.0.0">
    <Header>
