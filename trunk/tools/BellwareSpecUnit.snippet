    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>specification</ID>
          <ToolTip>Specification</ToolTip>
          <Default>observation</Default>
        </Literal>
      </Declarations>
      <Code Language="CSharp">
        <![CDATA[[Test]
        public void should_$specification$()
        {
          $end$
        }]]>
      </Code>
    </Snippet>
  </CodeSnippet>

