<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets
    xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">

  <!--Context Class-->
  <CodeSnippet Format="1.0.0">
    <Header>
      <Title>
        SpecUnit Context Class
      </Title>
      <Shortcut>ctx</Shortcut>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>concern</ID>
          <ToolTip>Concern</ToolTip>
          <Default>concern</Default>
        </Literal>
        <Literal>
          <ID>context</ID>
          <ToolTip>Conext Name</ToolTip>
          <Default>context</Default>
        </Literal>
      </Declarations>
      <Code Language="CSharp">
        <![CDATA[[Concern(typeof($concern$))]
        [TestFixture]
        public class when_$context$
        {
          $end$
        }]]>
      </Code>
    </Snippet>
  </CodeSnippet>

  <!--Concern Attribute-->
  <CodeSnippet Format="1.0.0">
    <Header>
